  "paths": {
    "/sign-up/client": {
      "post": {
        "description": "Cria um novo cliente",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "phone": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              },
              "example": {
                "phone": "+5511999999999",
                "password": "Foo@123"
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "userId": {
                      "type": "string",
                      "example": "b21ddc7-3279-4f69-839c-4044ae71d9f7"
                    },
                    "userType": {
                      "type": "string",
                      "schema": {
                        "$ref": "#/definitions/userTypeEnum"
                      },
                      "example": "CLIENT"
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Forbidden"
          }
        },
        "tags": ["Auth"]
      }
    },
    "/sign-up/realtor": {
      "post": {
        "description": "Cria um novo corretor de imóveis",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string"
                },
                "phone": {
                  "type": "string"
                },
                "creci": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              },
              "example": {
                "email": "foo@bar.com",
                "phone": "+5511999999999",
                "crea": "0123456789",
                "password": "Foo@123"
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "userId": {
                      "type": "string",
                      "example": "b21ddc7-3279-4f69-839c-4044ae71d9f7"
                    },
                    "userType": {
                      "type": "string",
                      "schema": {
                        "$ref": "#/definitions/userTypeEnum"
