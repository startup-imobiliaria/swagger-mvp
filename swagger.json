    "/confirm-account": {
      "post": {
        "description": "Verifica a conta de um cliente ou corretor de imóveis",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "token": {
                  "type": "string"
                },
                "userId": {
                  "type": "string"
                },
                "userType": {
                  "type": "string",
                  "schema": {
                    "$ref": "#/definitions/userTypeEnum"
                  }
                }
              },
              "example": {
                "token": "ABC123",
                "userId": "e14a460c-49cc-49f0-b4ab-1077e8ad13af",
                "userType": "CLIENT"
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "NO_CONTENT"
          },
          "404": {
            "description": "NOT_FOUND"
          },
          "409": {
            "description": "CONFLICT"
          }
        },
        "tags": ["Auth"]
      }
    },
    "/refresh-token": {
      "post": {
        "description": "Atualiza o token de acesso do usuário",
        "parameters": [
          {
            "name": "Authorization",
            "schema": {
              "$ref": "#/definitions/authHeader"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "accessToken": {
                      "type": "string",
