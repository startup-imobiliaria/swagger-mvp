    "/advertisements/{uuid}": {
      "get": {
        "description": "Busca por um imovél especifico",
        "parameters": [
          {
            "name": "uuid",
            "description": "O id do imóvel",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "string"
