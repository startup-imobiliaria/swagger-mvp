    "/advertisements": {
      "get": {
        "description": "Busca imóveis",
        "parameters": [
          {
            "name": "locations",
            "description": "Uma lista de bairros ou cidades (Enviar multiplos! Ex: `&locations=Americana,SP&locations=Campinas,SP`)",
            "in": "query",
            "required": true,
            "type": "array",
            "format": "array"
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "items": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/advertisementEntity"
                      }
                    },
                    "page": {
                      "type": "number",
                      "example": 1
                    }
                  }
                }
              }
            }
          }
        },
        "tags": ["Advertisements"]
      },
      "post": {
        "description": "Cria um imóvel",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "token": {
                  "type": "string"
                }
              },
              "example": {
                "token": "ABC123"
              }
            }
          }
        ],
        "tags": ["Advertisements"]
      },
